                </div>
                <div class="modal-body">
                    <h5 class="mb-3">Select Donation Type</h5>
                    
                    <div class="donation-option" onclick="selectDonationOption(this)">
                        <h6>One-time Donation</h6>
                        <p>Make a single contribution to support our work</p>
                    </div>
                    
                    <div class="donation-option" onclick="selectDonationOption(this)">
                        <h6>Monthly Donation</h6>
                        <p>Become a regular supporter with a monthly contribution</p>
                    </div>
                    
                    <div class="donation-option" onclick="selectDonationOption(this)">
                        <h6>Project-specific Donation</h6>
                        <p>Support a specific project or initiative</p>
                    </div>
                    
                    <div class="mt-4">
                        <h5 class="mb-3">Donation Amount</h5>
                        <div class="row">
                            <div class="col-4 mb-2">
                                <button class="btn btn-outline-primary w-100" onclick="setAmount(50)">R50</button>
                            </div>
                            <div class="col-4 mb-2">
                                <button class="btn btn-outline-primary w-100" onclick="setAmount(100)">R100</button>
                            </div>
                            <div class="col-4 mb-2">
                                <button class="btn btn-outline-primary w-100" onclick="setAmount(200)">R200</button>
                            </div>
                            <div class="col-4 mb-2">
                                <button class="btn btn-outline-primary w-100" onclick="setAmount(500)">R500</button>
                            </div>
                            <div class="col-4 mb-2">
                                <button class="btn btn-outline-primary w-100" onclick="setAmount(1000)">R1000</button>
                            </div>
                            <div class="col-4 mb-2">
                                <button class="btn btn-outline-primary w-100" onclick="setAmount(0)">Other</button>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <label for="customAmount" class="form-label">Custom Amount (ZAR)</label>
                            <input type="number" class="form-control" id="customAmount" placeholder="Enter amount">
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <h5 class="mb-3">Payment Method</h5>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard" checked>
                            <label class="form-check-label" for="creditCard">
                                Credit/Debit Card
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="bankTransfer">
                            <label class="form-check-label" for="bankTransfer">
                                Bank Transfer
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="paypal">
                            <label class="form-check-label" for="paypal">
                                PayPal
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="processDonation()">Donate Now</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Function to select donation option
        function selectDonationOption(element) {
            // Remove selected class from all options
            document.querySelectorAll('.donation-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // Add selected class to clicked option
            element.classList.add('selected');
        }
        
        // Function to set donation amount
        function setAmount(amount) {
            if (amount === 0) {
                document.getElementById('customAmount').focus();
            } else {
                document.getElementById('customAmount').value = amount;
            }
        }
        
        // Function to process donation
        function processDonation() {
            const amount = document.getElementById('customAmount').value;
            if (!amount || amount <= 0) {
                alert('Please enter a valid donation amount.');
                return;
            }
            
            alert(`Thank you for your donation of R${amount}! You will be redirected to the payment gateway.`);
            // In a real implementation, you would redirect to a payment gateway here
            // For this demo, we'll just close the modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('donateModal'));
            modal.hide();
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
