        }
        
        .page-links {
            padding: 60px 0;
        }
        
        .page-link-btn {
            padding: 20px 10px;
            font-weight: 600;
            border-width: 2px;
            transition: all 0.3s;
        }
        
        .page-link-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .modal-content {
            border-radius: 10px;
            border: none;
        }
        
